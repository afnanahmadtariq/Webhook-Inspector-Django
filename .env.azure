# Production environment template for Azure deployment
DEBUG=False
SECRET_KEY=your-production-secret-key-here
ALLOWED_HOSTS=your-app-name.azurewebsites.net,yourdomain.com

# Database Configuration - Azure PostgreSQL
DATABASE_ENGINE=postgresql
POSTGRES_DB=webhook_inspector
POSTGRES_USER=webhook_admin
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=your-postgres-server.postgres.database.azure.com
POSTGRES_PORT=5432

# Azure Redis Cache
REDIS_HOST=your-redis-cache.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-access-key

# Celery Configuration (Azure Redis)
CELERY_BROKER_URL=rediss://:your-redis-access-key@your-redis-cache.redis.cache.windows.net:6380/0
CELERY_RESULT_BACKEND=rediss://:your-redis-access-key@your-redis-cache.redis.cache.windows.net:6380/0

# Email Configuration (Azure Communication Services or SendGrid)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# JWT Configuration
JWT_SECRET_KEY=your-production-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7

# Webhook Configuration
WEBHOOK_TTL_HOURS=24
MAX_PAYLOAD_SIZE=5242880
WEBHOOK_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Analytics Configuration
ANALYTICS_ENABLED=True
ANALYTICS_RETENTION_DAYS=90

# Security Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://your-frontend.azurewebsites.net
CORS_ALLOW_CREDENTIALS=True

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_TYPES=json,xml,txt

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Feature Flags
ENABLE_WEBSOCKETS=True
ENABLE_GEOLOCATION=True
ENABLE_SCHEMA_VALIDATION=True
ENABLE_EXPORT=True

# Azure Application Insights (Optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Azure Storage (Optional - for static files)
AZURE_ACCOUNT_NAME=your-storage-account
AZURE_ACCOUNT_KEY=your-storage-key
AZURE_CONTAINER=staticfiles

# Environment
ENVIRONMENT=production
RUN_TESTS=false

# Azure Web App Settings
WEBSITES_ENABLE_APP_SERVICE_STORAGE=true
WEBSITES_PORT=8000
